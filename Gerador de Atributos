###Gerador automatico de Atributos para RPGs estilo D&D, TormentaRPG e etc.
import random

linha=('=')*100
print(linha)
print(linha)
print("Bem Vindo a rolador de Atributos")
print(linha)
print(linha)
dado=int(input("Quantos D6 você gostaria de rolar para cada atributo?"))
print(linha)
print(linha)
forc=dado*(random.randint(1,6))
dest=dado*(random.randint(1,6))
cons=dado*(random.randint(1,6))
int=dado*(random.randint(1,6))
sab=dado*(random.randint(1,6))
car=dado*(random.randint(1,6))
print("Força:",forc)
print("Destreza:",dest)
print("Constituição:",cons)
print("Inteligencia:",int)
print("Sabedoria:",sab)
print("Carisma:",car)
